<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>
    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="StyleHeaderTitle" parent="StyleTitle14">
        <item name="android:textSize">@dimen/header_title_text_size</item>
        <item name="android:textColor">@color/header_textview_color</item>
        <item name="android:padding">@dimen/header_textview_padding</item>
        <item name="android:background">@drawable/shape_rounded_textview</item>
        <item name="android:layout_marginBottom">@dimen/main_dimen</item>
        <item name="android:layout_marginStart">@dimen/main_dimen</item>
    </style>
</resources>